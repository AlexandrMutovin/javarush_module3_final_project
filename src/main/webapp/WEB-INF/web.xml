<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>AppServlet</servlet-name>
        <servlet-class>ru.javarush.amutovin.module3.Servlets.AppServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AppServlet</servlet-name>
        <url-pattern></url-pattern>
    </servlet-mapping>
    <listener>
        <listener-class>ru.javarush.amutovin.module3.AppContextListener</listener-class>
    </listener>
    <filter>
        <filter-name>CharsetFilter</filter-name>
        <filter-class>ru.javarush.amutovin.module3.filters.CharsetFilter</filter-class>
        <init-param>
            <param-name>active</param-name>
            <param-value>true</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>CharsetFilter</filter-name>
        <servlet-name>*</servlet-name>
    </filter-mapping>
</web-app>