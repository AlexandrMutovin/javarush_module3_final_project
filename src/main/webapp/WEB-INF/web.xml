<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>AppServlet</servlet-name>
        <servlet-class>ru.javarush.amutovin.module3.servlets.AppServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AppServlet</servlet-name>
        <url-pattern></url-pattern>
        <url-pattern>/start</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>QuestServlet</servlet-name>
        <servlet-class>ru.javarush.amutovin.module3.servlets.QuestServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>QuestServlet</servlet-name>
        <url-pattern>/quest</url-pattern>
    </servlet-mapping>

    <listener>
        <listener-class>ru.javarush.amutovin.module3.listeners.AppContextListener</listener-class>
    </listener>

</web-app>